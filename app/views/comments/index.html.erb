<h1>Listing comments</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Song</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.body %></td>
    <td><%=h comment.song %></td>
    <td><%= link_to 'Show', song_comment_path(comment.song_id,comment) %></td>
    <td><%= link_to 'Edit', edit_song_comment_path(comment.song_id,comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_song_comment_path %>
