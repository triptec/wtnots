<h1>Listing songs</h1>

<%= link_to 'New song', new_song_path %>
<%= will_paginate %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
  </tr>
<% @songs.each do |song| %>
  <tr>
    <td><%= link_to song.title, song_path(song) %></td>
    <td><%=h truncate song.description, :length => 50 %></td>
    <td><%= link_to (truncate(song.user.username, :length => 10)), user_path(song.user.id) %></td>
  </tr>
<% end %>
</table>
<%= will_paginate %>
