<p>
  <b>Title:</b>
  <%=h @song.title %>
</p>

<p>
  <b>Description:</b>
  <%=h @song.description %>
</p>

<p>
  <b>User:</b>
  <%=h @song.user %>
</p>


<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>
<%= print_all_comments(@song) %>
<br />
<br />
<br />
<br />
<% unless @song.comments.empty? %>

  <% @song.comments.each do |comment| %>
      <p>
				<% if comment.inverse_replies.empty? %>
        <%=h comment.body %>
				<% unless comment.replies.empty? %>
  				<% comment.replies.each do |reply| %>
						<br />--
						<%=h reply.body %>
					<% end %>
				<% end %>
				<% end %>
      </p>
  <% end %>
<% end %>

<h2>Comment</h2>
<%= render :partial => @comment = Comment.new, :locals => { :button_name => 'Comment' } %>

