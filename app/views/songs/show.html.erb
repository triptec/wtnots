<%= link_to 'Back', songs_path %> |
<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Delete', {:action => "destroy", :id =>@song}, :confirm => "Are you sure?" %> 
<p>
  <b>Title:</b>
  <%=h @song.title %>
</p>

<p>
  <b>Description:</b>
  <%=h @song.description %>
</p>

<p>
  <b>User:</b>
  <%=h @song.user.username %>
</p>

<h2><a href="#" onclick="Element.toggle('new_comment_container')">Comment</a></h2>
<div id="new_comment_container" style="display:none">
  <%= render :partial => "comments/form", :object => @comment = Comment.new, :locals => { :button_name => 'Comment' } %>
</div>
<div id="comment_container">
  <%= print_all_comments(@song) %>
</div>

