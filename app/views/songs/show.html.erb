<%= links_to_song(@song) %>
<p>
  <b>Title:</b>
  <%=h @song.title %>
</p>

<p>
  <b>Description:</b>
  <%=h @song.description %>
</p>

<p>
  <b>User:</b>
  <%=h @song.user.username %>
</p>
<% if @song.audio.exists? %>
<p>
  <b>Audio:</b>
  <%= link_to @song.audio_file_name, @song.audio.url %>
</p>
<% end %>
<div id="comment_container">
  <%= link_to_comment %>
  <%= print_all_comments(@song) %>
</div>

