<h2><%=h @user.name %></h2>
<%= gravatar_for @user %>
<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Name:</b>
  <%=h @user.name %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Admin:</b>
  <%=h @user.admin %>
</p>

<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>

<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>

<% if correct_user || current_user.admin %> 
  <%= link_to 'Edit', edit_user_path(@user) %>
  <%= link_to 'Delete', @user, :method => :delete, :confirm => "Are you sure?" %>
<% end %>
